<% content_for :body do %>
  <%= render partial: '/layouts/paragraph',
             locals: { content: "#{t(:welcome).capitalize} #{@resource.first_name}" } %>

  <%= render partial: '/layouts/paragraph',
             locals: { content: t('.confirm_link_msg') } %>
<% end %>

<% content_for :call_to_action do %>
  <%= render partial: '/layouts/call_to_action',
             locals: { href: confirmation_url(@resource, { confirmation_token: @token,
                                                           config: message['client-config'].to_s,
                                                           redirect_url: message['redirect-url'] }).html_safe,
                       text: t('.confirm_account_link') } %>
<% end %>

<% content_for :signature do %>
  <%= render partial: '/layouts/signature' %>
<% end %>
