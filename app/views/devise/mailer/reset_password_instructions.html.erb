<% content_for :body do %>
  <%= render partial: '/layouts/paragraph',
             locals: { content: "#{t(:hello).capitalize} #{@resource.first_name}" } %>

  <%= render partial: '/layouts/paragraph',
             locals: { content: t('.request_reset_link_msg') } %>
<% end %>

<% content_for :call_to_action do %>
  <%= render partial: '/layouts/call_to_action',
             locals: { href: edit_password_url(@resource, reset_password_token: @token,
                                                          config: message['client-config'].to_s,
                                                          redirect_url: message['redirect-url'].to_s).html_safe,
                       text: t('.password_change_link') } %>
<% end %>

<% content_for :lower_body do %>
  <%= render partial: '/layouts/paragraph',
             locals: { content: t('.ignore_mail_msg') } %>

  <%= render partial: '/layouts/paragraph',
             locals: { content: t('.no_changes_msg') } %>
<% end %>

<% content_for :signature do %>
  <%= render partial: '/layouts/signature' %>
<% end %>
